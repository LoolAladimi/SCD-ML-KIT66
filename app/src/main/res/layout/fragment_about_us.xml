<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".fragments.AboutUsFragment">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/imageEmp3"
                        android:layout_width="90dp"
                        android:layout_height="90dp"
                        android:layout_margin="15dp"
                        android:background="@drawable/bg"
                        android:elevation="14dp"
                        android:src="@mipmap/ic_lool" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_marginLeft="60dp"
                        android:layout_marginTop="30dp"
                        android:layout_marginRight="10dp"
                        android:background="@drawable/bg"
                        android:orientation="vertical"
                        android:paddingLeft="50dp">

                        <TextView
                            android:id="@+id/textName3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="10dp"
                            android:text="Lool Muhammed AL-adimi"
                            android:fontFamily="@font/cr"
                            android:textStyle="bold"
                            android:textColor="@android:color/black"
                            android:textSize="18sp"
                            android:typeface="serif" />

                        <TextView
                            android:id="@+id/textMajor"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="10dp"
                            android:gravity="center"
                            android:text="Android developer"
                            android:fontFamily="@font/cr"
                            android:textStyle="bold"
                            android:textColor="@android:color/black"
                            android:textSize="19sp"
                            android:typeface="serif" />

                        <TextView
                            android:id="@+id/textdep"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="10dp"
                            android:gravity="center"
                            android:text="Information Technology"
                            android:fontFamily="@font/cr"
                            android:textStyle="bold"
                            android:textColor="@android:color/black"
                            android:textSize="19sp"
                            android:typeface="serif" />

                    </LinearLayout>
                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="18dp"
                android:orientation="horizontal">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/imageEmp2"
                        android:layout_width="90dp"
                        android:layout_height="90dp"
                        android:layout_margin="15dp"
                        android:background="@drawable/bg"
                        android:elevation="14dp"
                        android:src="@mipmap/ic_saba" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_marginLeft="60dp"
                        android:layout_marginTop="30dp"
                        android:layout_marginRight="10dp"
                        android:background="@drawable/bg"
                        android:orientation="vertical"
                        android:paddingLeft="50dp">

                        <TextView
                            android:id="@+id/textName4"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="10dp"
                            android:text="Saba'a Yahia AL-ansi"
                            android:fontFamily="@font/cr"
                            android:textStyle="bold"
                            android:textColor="@android:color/black"
                            android:textSize="18sp"
                            android:typeface="serif" />

                        <TextView
                            android:id="@+id/textMajor2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="10dp"
                            android:gravity="center"
                            android:text="Android developer"
                            android:fontFamily="@font/cr"
                            android:textStyle="bold"
                            android:textColor="@android:color/black"
                            android:textSize="18sp"
                            android:typeface="serif" />

                        <TextView
                            android:id="@+id/textdep2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="10dp"
                            android:gravity="center"
                            android:text="Information Technology"
                            android:fontFamily="@font/cr"
                            android:textStyle="bold"
                            android:textColor="@android:color/black"
                            android:textSize="19sp"

                            android:typeface="serif" />

                    </LinearLayout>

                </RelativeLayout>

            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:gravity="center"
                android:text="Countact Us"
                android:textColor="@android:color/black"
                android:textSize="24sp" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_gravity="center"
                android:gravity="center">

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="69dp"
                    android:layout_weight="1"
                    android:id="@+id/gmail"
                    android:layout_gravity="center_horizontal"
                    android:onClick="gmail"
                    android:paddingTop="15dp"
                    android:layout_margin="20dp"
                    android:src="@drawable/gmail" />

                <ImageView
                    android:id="@+id/phon"
                    android:layout_width="0dp"
                    android:layout_height="64dp"
                    android:layout_gravity="center_horizontal"
                    android:paddingTop="15dp"
                    android:layout_margin="20dp"
                    android:layout_weight="1"
                    android:onClick="phon"

                    android:src="@drawable/lo" />
            </LinearLayout>






        </LinearLayout>

    </ScrollView>



</LinearLayout>